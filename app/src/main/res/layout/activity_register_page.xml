<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tasarim_blue"
    tools:context=".RegisterPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/bgsincap2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:contentDescription="Logo" />

        <!-- Hoşgeldiniz Metni -->
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ᴛᴜʀǫᴜᴏɪsᴇ"
            android:textSize="25sp"
            android:textColor="#333333"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/iv_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />



        <!-- Ad Soyad Giriş -->
        <EditText
            android:id="@+id/kayitol_ad"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:hint="Ad Soyad"
            android:textColorHint="@color/icon_color"
            android:drawableStart="@drawable/kullanici_asset2"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background1"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp" />

        <!-- E-posta Giriş -->
        <EditText
            android:id="@+id/kayitol_email"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textColorHint="@color/icon_color"

            android:hint="E-posta"
            android:drawableStart="@drawable/email_asset1"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background1"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/kayitol_ad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp" />

        <!-- Şifre Giriş -->
        <EditText
            android:id="@+id/kayitol_kullanicisifre"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textColorHint="@color/icon_color"

            android:hint="Şifre"
            android:drawableLeft="@drawable/sifre_asset1"
            android:drawableRight="@drawable/eyes_asset2"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background1"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/kayitol_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp" />

        <!-- Şifre Tekrar Giriş -->
        <EditText
            android:id="@+id/kullanici_sifre_tekrar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:hint="Şifre Tekrarı"
            android:textColorHint="@color/icon_color"

            android:drawableLeft="@drawable/sifre_asset1"
            android:drawableRight="@drawable/eyes_asset2"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:background="@drawable/edittext_background1"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/kayitol_kullanicisifre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kayitol_kullaniciadi"
            android:text="kullanici_adi"
            android:visibility="gone"></EditText>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kayitol_telefon"
            android:text="05555555555"
            android:visibility="gone"></EditText>

        <!-- Kayıt Ol Butonu -->
        <com.google.android.material.button.MaterialButton

        android:id="@+id/kayitolpage_kayitbutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Kayıt Ol"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            android:textSize="16sp"
            android:backgroundTint="#007BFF"
            app:layout_constraintTop_toBottomOf="@id/kullanici_sifre_tekrar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp" />

        <!-- "Ya Da" Metni -->
        <TextView
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ya Da"
            android:textSize="14sp"
            android:textColor="#1C1A1A"
            app:layout_constraintTop_toBottomOf="@id/kayitolpage_kayitbutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Google ve Facebook Butonları -->
        <LinearLayout
            android:id="@+id/sosyal_kayit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_or"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <com.google.android.material.button.MaterialButton
            app:cornerRadius="12dp"
            android:id="@+id/btn_google"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Google"
                android:textColor="#000000"
                android:textSize="11sp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/google_asset"
                android:drawablePadding="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Facebook Butonu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_facebook"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:cornerRadius="12dp"
                android:text="Facebook"
                android:textColor="#000000"
                android:textSize="11sp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/facebook_asset"
                android:drawablePadding="8dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Hesabın Var mı? -->
        <TextView
            android:id="@+id/tv_login_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesabın var mı? "
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/sosyal_kayit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/kayitolpage_girisyap_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hemen giriş yap!"
            android:textSize="14sp"
            android:textColor="#007BFF"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_login_prompt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <!-- ProgressBar, tüm ekranı kaplayacak şekilde ortalanır -->
    <!-- ProgressBar, tüm ekranı kaplayacak şekilde ortalanır -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Yarı Şeffaf Katman (Kullanıcı etkileşimini engelleyecek) -->
    <FrameLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#88000000"
    android:visibility="gone" />

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg772"
    tools:context=".zamanFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/arkaplanf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/frame_2"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gun_txt"
                        android:layout_width="0dp"
                        android:textColor="@color/white"

                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/baseline_menu_24"
                        android:onClick="showpopup"
                        android:text="" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pgbar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:layout_marginTop="-40dp"
                    android:background="@drawable/progress_circle_shape"
                    android:indeterminate="false"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progressbar" />

                <TextView
                    android:id="@+id/progress_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-200dp"
                    android:text="%50"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="150dp"
                    android:layout_marginHorizontal="10dp">

                    <SeekBar
                        android:id="@+id/seekBar"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:max="5"
                        android:progress="0"
                        android:thumbTint="@android:color/white"
                        android:progressTint="#EDEDED"
                        android:backgroundTint="#E1DFDF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/step_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="İlk Teklif"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/step_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1 Gün"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/step_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1 Hafta"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/step_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1 Ay"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/step_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1 Yıl"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/step_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="5 Yıl"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:padding="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:columnCount="6"
                    app:rowCount="1">
                </androidx.gridlayout.widget.GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="#F4F4F4" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/frame_2"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:divider="@android:color/black"
                    android:showDividers="middle"
                    android:baselineAligned="false">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/gsaat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="SAAT\n0"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textStyle="bold|italic"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/gdakika"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="DAKİKA\n0"
                            android:textColor="@color/white"

                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textStyle="bold|italic"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/gsaniye"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="SANİYE\n0"
                            android:textAlignment="center"
                            android:textColor="@color/white"

                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textStyle="bold|italic"
                            android:layout_weight="1"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/geecenYil_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="YIL\n0"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/white"

                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/gecenAy_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="AY\n0"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textStyle="bold|italic"
                            android:textColor="@color/white"

                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/gecenGun_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="GÜN\n0"
                            android:textAlignment="center"
                            android:textColor="@color/white"

                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textStyle="bold|italic"
                            android:layout_weight="1"/>
                    </TableRow>
                </TableLayout>

                <Button
                    android:id="@+id/selectDateButton"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="İlişki Başlangıç Tarih ve Saatini Seçiniz"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal|bottom"/>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

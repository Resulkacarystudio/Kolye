<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    tools:context=".sohbetFragment"
    android:background="@drawable/bg772">

    <!-- Üst Banner CardView ile (Kompakt ve Opak) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topBannerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"

        app:cardBackgroundColor="#80000000"
        android:alpha="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/topBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            android:padding="8dp">

            <!-- Geri Butonu -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/geri_bt1"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Geri"
                android:layout_gravity="center_vertical" />

            <!-- Profil Fotoğrafı -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="Profil Fotoğrafı" />

            <!-- Kullanıcı Adı -->
            <TextView
                android:id="@+id/bannerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBannerCard"
        app:layout_constraintBottom_toTopOf="@id/messageInputCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#55EFECEC"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:clipToPadding="false" />

    <!-- Mesaj Gönderme Alanı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/messageInputCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#80000000"
        android:alpha="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    >


        <LinearLayout
            android:id="@+id/messageInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Mesaj yazın"
                android:background="@drawable/frame_1"
                android:padding="10dp"
                android:layout_marginEnd="8dp"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"/>

            <ImageButton
                android:id="@+id/buttonSend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mesaj_gonder_asset"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Mesaj Gönder"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Alıcı ID Girişi (Gizli) -->
    <EditText
        android:id="@+id/editTextReceiverId"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:hint="Receiver ID"
        android:background="@drawable/frame_1"
        android:padding="10dp"
        android:layout_marginEnd="8dp"
        android:inputType="text"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        tools:ignore="MissingConstraints" />

    <!-- Alıcı ID'yi Kaydet Butonu (Gizli) -->
    <ImageButton
        android:id="@+id/buttonSaveReceiverId"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mesaj_gonder_asset"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        android:contentDescription="Save Receiver ID"
        tools:ignore="MissingConstraints" />

    <!-- ID Paylaş Butonu (Gizli) -->
    <ImageButton
        android:id="@+id/buttonShareId"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mesaj_gonder_asset"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        android:contentDescription="Share ID"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
